pipeline {
  agent any

  tools{
    nodejs 'nodejs 8.9.0'

  }

  stages{
      stage(build){
          steps{
              echo 'Compiling result app..'
              dir('result'){
		sh 'npm install'
		sh 'npm ls'
              }
          }
      }
      stage(test){
          steps{
              echo 'Running tests on result app..'
              dir('result'){
	           sh 'npm install'
	           sh 'npm ls'

              }

          }
      }
  }

  post{
    always{
        echo 'Building multibranch pipeline for result is completed..'
    }
  }
}
